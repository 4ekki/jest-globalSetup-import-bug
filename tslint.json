{
  "rulesDirectory": [
    "node_modules/tslint-microsoft-contrib"
  ],
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "rules": {
    "object-literal-sort-keys": false,
    "no-unused-expression": false,
    "no-floating-promises": true,
    "mocha-avoid-only": true,
    "mocha-unneeded-done": true,
    "no-console": false
  }
}
